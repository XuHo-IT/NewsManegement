@{
    ViewData["Title"] = "System Accounts";
}

<div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20 pt-24">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
        <div>
            <h1 class="font-sans text-4xl font-semibold text-obsidian tracking-tight">System Accounts</h1>
            <p class="text-subtle text-base mt-2">Manage user accounts and permissions</p>
        </div>
        <button class="group relative isolate overflow-hidden bg-obsidian text-white text-sm font-semibold px-6 py-3 rounded shadow-[0_1px_2px_rgba(0,0,0,0.08)] ring-1 ring-white/10 transition-all duration-500 ease-[cubic-bezier(0.25,1,0.5,1)] hover:scale-[1.03] hover:shadow-[0_12px_32px_-8px_rgba(0,0,0,0.3)] hover:ring-white/20 active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-obsidian/20 focus:ring-offset-2" data-bs-toggle="modal" data-bs-target="#accountModal" onclick="openCreateAccount()">
            <div class="shimmer-layer absolute inset-0 bg-gradient-to-r from-transparent via-white/15 to-transparent z-0 pointer-events-none"></div>
            <span class="relative z-10">+ Add Account</span>
        </button>
    </div>

    <!-- Accounts Table -->
    <div class="premium-card rounded-xl overflow-hidden">
        <div class="px-8 py-6 border-b border-border/50">
            <h3 class="text-xl font-semibold text-obsidian">Accounts List</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="border-b border-border/50 bg-canvas">
                    <tr>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Email</th>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Name</th>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Role</th>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Actions</th>
                    </tr>
                </thead>
                <tbody id="accountsBody">
                    <tr><td colspan="4" class="text-center text-subtle py-8">Loading accounts...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Account Modal -->
<div class="modal fade" id="accountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content premium-card border border-border">
            <div class="modal-header border-b border-border/50 px-8 py-6">
                <h5 class="modal-title text-xl font-semibold text-obsidian" id="accountModalTitle">Add Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-8 py-6">
                <input type="hidden" id="accountId" />
                <div class="mb-4" id="accountNameContainer">
                    <label class="block text-sm font-medium text-obsidian mb-2">Full Name *</label>
                    <input type="text" class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" id="accountName" required />
                </div>
                <div class="mb-4" id="accountEmailContainer">
                    <label class="block text-sm font-medium text-obsidian mb-2">Email *</label>
                    <input type="email" class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" id="accountEmail" required />
                </div>
                <div class="mb-4" id="accountPasswordContainer">
                    <label class="block text-sm font-medium text-obsidian mb-2">Password</label>
                    <input type="password" class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" id="accountPassword" />
                    <small class="text-subtle text-xs">Leave blank to keep current password</small>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-obsidian mb-2">Role *</label>
                    <select class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" id="accountRole" required></select>
                </div>
            </div>
            <div class="modal-footer border-t border-border/50 px-8 py-6">
                <button type="button" class="px-6 py-2.5 border border-border rounded-lg font-medium text-sm hover:bg-canvas transition-colors" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="group relative isolate overflow-hidden bg-obsidian text-white text-sm font-semibold px-6 py-2.5 rounded shadow-[0_1px_2px_rgba(0,0,0,0.08)] ring-1 ring-white/10 transition-all duration-500 ease-[cubic-bezier(0.25,1,0.5,1)] hover:scale-[1.02] hover:shadow-[0_8px_24px_-4px_rgba(0,0,0,0.25)] hover:ring-white/20 active:scale-[0.98]" onclick="saveAccount()">
                    <span class="relative z-10">Save</span>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadRoles();
            loadAccounts();
        });

        function loadRoles() {
            const token = window.getAuthToken();
            fetch(window.API_BASE_URL + '/api/roles', {
                headers: {
                    ...(token ? { 'Authorization': `Bearer ${token}` } : {})
                }
            })
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load roles');
                    return response.json();
                })
                .then(data => {
                    const select = document.getElementById('accountRole');
                    select.innerHTML = '';
                    if (Array.isArray(data)) {
                        data.forEach(role => {
                            const option = document.createElement('option');
                            option.value = role.roleID;
                            option.textContent = role.roleName;
                            select.appendChild(option);
                        });
                    }
                });
        }

        function loadAccounts() {
            const token = window.getAuthToken();
            fetch(window.API_BASE_URL + '/api/system-accounts', {
                headers: {
                    ...(token ? { 'Authorization': `Bearer ${token}` } : {})
                }
            })
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load accounts');
                    return response.json();
                })
                .then(data => {
                    const tbody = document.getElementById('accountsBody');
                    tbody.innerHTML = '';

                    if (Array.isArray(data) && data.length > 0) {
                        data.forEach(acc => {
                            tbody.innerHTML += `
                                <tr class="border-b border-border/30 hover:bg-canvas/50 transition-colors">
                                    <td class="px-8 py-4 text-obsidian font-medium">${acc.accountEmail || 'N/A'}</td>
                                    <td class="px-8 py-4 text-subtle">${acc.accountName || 'N/A'}</td>
                                    <td class="px-8 py-4">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                                            ${acc.accountRoleNavigation?.roleName || acc.accountRole || 'N/A'}
                                        </span>
                                    </td>
                                    <td class="px-8 py-4 flex gap-2">
                                        <button class="text-blue-600 hover:text-blue-800 font-medium text-xs" onclick="openEditAccount(${acc.accountID}, '${(acc.accountName || '').replace(/'/g, "&#39;")}', '${(acc.accountEmail || '').replace(/'/g, "&#39;")}', ${acc.accountRole || 0})">Edit</button>
                                        <button class="text-red-600 hover:text-red-800 font-medium text-xs" onclick="deleteAccount(${acc.accountID})">Delete</button>
                                    </td>
                                </tr>
                            `;
                        });
                    } else {
                        tbody.innerHTML = '<tr><td colspan="4" class="text-center text-subtle py-8">No accounts found</td></tr>';
                    }
                })
                .catch(() => {
                    document.getElementById('accountsBody').innerHTML = '<tr><td colspan="4" class="text-center text-red-600 py-8">Error loading accounts</td></tr>';
                });
        }

        function openCreateAccount() {
            document.getElementById('accountModalTitle').textContent = 'Add Account';
            document.getElementById('accountId').value = '';
            document.getElementById('accountName').value = '';
            document.getElementById('accountEmail').value = '';
            document.getElementById('accountPassword').value = '';
            
            // Show all fields for create
            document.getElementById('accountNameContainer').style.display = 'block';
            document.getElementById('accountEmailContainer').style.display = 'block';
            document.getElementById('accountPasswordContainer').style.display = 'block';
            document.getElementById('accountName').required = true;
            document.getElementById('accountEmail').required = true;
        }

        function openEditAccount(id, name, email, roleId) {
            document.getElementById('accountModalTitle').textContent = 'Edit Account';
            document.getElementById('accountId').value = id;
            document.getElementById('accountName').value = name;
            document.getElementById('accountEmail').value = email;
            document.getElementById('accountPassword').value = '';
            document.getElementById('accountRole').value = roleId;
            
            // ✅ FIX: Chỉ hiển thị role field khi edit
            document.getElementById('accountNameContainer').style.display = 'none';
            document.getElementById('accountEmailContainer').style.display = 'none';
            document.getElementById('accountPasswordContainer').style.display = 'none';
            document.getElementById('accountName').required = false;
            document.getElementById('accountEmail').required = false;
            
            const modal = new bootstrap.Modal(document.getElementById('accountModal'));
            modal.show();
        }

        function saveAccount() {
            const id = document.getElementById('accountId').value;
            const token = window.getAuthToken();
            
            let payload;
            if (id) {
                // ✅ FIX: Edit - chỉ gửi role
                payload = {
                    role: parseInt(document.getElementById('accountRole').value)
                };
            } else {
                // Create - gửi đầy đủ
                payload = {
                    fullName: document.getElementById('accountName').value,
                    email: document.getElementById('accountEmail').value,
                    password: document.getElementById('accountPassword').value,
                    role: parseInt(document.getElementById('accountRole').value)
                };
            }

            const method = id ? 'PUT' : 'POST';
            const url = id ? `${window.API_BASE_URL}/api/system-accounts/${id}` : `${window.API_BASE_URL}/api/system-accounts`;

            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                    ...(token ? { 'Authorization': `Bearer ${token}` } : {})
                },
                body: JSON.stringify(payload)
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => {
                        throw new Error(text || 'Failed to save account');
                    });
                }
                return response.status === 204 ? null : response.json();
            })
            .then(() => {
                loadAccounts();
                bootstrap.Modal.getInstance(document.getElementById('accountModal')).hide();
            })
            .catch(err => alert(err.message));
        }

        function deleteAccount(id) {
            if (!confirm('Delete this account?')) return;

            window.apiFetch(`/api/system-accounts/${id}`, { method: 'DELETE' })
                .then(response => {
                    if (!response.ok) throw new Error('Failed to delete account');
                    loadAccounts();
                })
                .catch(err => alert(err.message));
        }
    </script>
}
