@{
    ViewData["Title"] = "Create Category";
}

<div class="row pt-24">
    <div class="col-lg-6 mx-auto">
        <h1 class="mb-4">Create New Category</h1>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Category Details</h5>
            </div>
            <form method="post" enctype="multipart/form-data" class="card-body">
                <div class="mb-3">
                    <label class="form-label">Category Name *</label>
                    <input type="text" class="form-control" name="name" placeholder="e.g., Technology" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="description" rows="4" placeholder="Category description"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Image</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                    <small class="text-muted">Upload category image (optional)</small>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isActive" name="isActive" value="true" checked>
                        <label class="form-check-label" for="isActive">
                            Active
                        </label>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create Category</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
