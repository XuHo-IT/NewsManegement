@{
    ViewData["Title"] = "Audit Logs";
}

<div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20 pt-24">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="font-sans text-4xl font-semibold text-obsidian tracking-tight">Audit Logs</h1>
        <p class="text-subtle text-base mt-2">Track create, update, and delete operations</p>
    </div>

    <!-- Audit Logs Table -->
    <div class="premium-card rounded-xl overflow-hidden">
        <div class="px-8 py-6 border-b border-border/50">
            <h3 class="text-xl font-semibold text-obsidian">Audit Trail</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="border-b border-border/50 bg-canvas">
                    <tr>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Table</th>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Action</th>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Record</th>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Changed By</th>
                        <th class="text-left px-8 py-4 font-semibold text-obsidian">Changed At</th>
                    </tr>
                </thead>
                <tbody id="auditBody">
                    <tr><td colspan="5" class="text-center text-subtle py-8">Loading logs...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadAuditLogs();
        });

        function loadAuditLogs() {
            const token = window.getAuthToken();
            // Use enriched endpoint to get user information
            fetch(window.API_BASE_URL + '/api/audit-logs/enriched', {
                headers: {
                    ...(token ? { 'Authorization': `Bearer ${token}` } : {})
                }
            })
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load audit logs');
                    return response.json();
                })
                .then(data => {
                    const tbody = document.getElementById('auditBody');
                    tbody.innerHTML = '';

                    if (Array.isArray(data) && data.length > 0) {
                        data.forEach(log => {
                            const actionBadge = {
                                'INSERT': 'bg-emerald-100 text-emerald-700',
                                'UPDATE': 'bg-blue-100 text-blue-700',
                                'DELETE': 'bg-red-100 text-red-700'
                            }[log.action] || 'bg-gray-100 text-gray-700';

                            // Use changedByName if available, otherwise fallback to changedBy
                            const changedByName = log.changedByName || log.changedBy || 'N/A';

                            tbody.innerHTML += `
                                <tr class="border-b border-border/30 hover:bg-canvas/50 transition-colors">
                                    <td class="px-8 py-4 text-obsidian font-medium">${log.tableName || 'N/A'}</td>
                                    <td class="px-8 py-4">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${actionBadge}">
                                            ${log.action || 'N/A'}
                                        </span>
                                    </td>
                                    <td class="px-8 py-4 text-subtle">${log.recordKey || 'N/A'}</td>
                                    <td class="px-8 py-4 text-subtle">${changedByName}</td>
                                    <td class="px-8 py-4 text-subtle text-xs">${log.changedAt ? new Date(log.changedAt).toLocaleString() : 'N/A'}</td>
                                </tr>
                            `;
                        });
                    } else {
                        tbody.innerHTML = '<tr><td colspan="5" class="text-center text-subtle py-8">No logs found</td></tr>';
                    }
                })
                .catch(() => {
                    document.getElementById('auditBody').innerHTML = '<tr><td colspan="5" class="text-center text-red-600 py-8">Error loading logs</td></tr>';
                });
        }
    </script>
}
