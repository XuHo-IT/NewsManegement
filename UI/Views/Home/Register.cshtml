@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center px-6 py-12 bg-canvas">
    <div class="w-full max-w-md">
        <div class="premium-card p-8 rounded-xl">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-obsidian mb-2">Create Account</h1>
                <p class="text-subtle text-sm">Sign up to access the news management system</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm">
                    @ViewBag.Error
                </div>
            }

            <form id="registerForm" method="post" action="@Url.Action("Register", "Home")">
                <div class="space-y-4">
                    <div>
                        <label for="fullName" class="block text-sm font-medium text-obsidian mb-2">Full Name *</label>
                        <input type="text" id="fullName" name="fullName" required 
                               class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" 
                               placeholder="Enter your full name" autocomplete="name">
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-obsidian mb-2">Email *</label>
                        <input type="email" id="email" name="email" required 
                               class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" 
                               placeholder="Enter your email" autocomplete="email">
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-obsidian mb-2">Password *</label>
                        <input type="password" id="password" name="password" required 
                               class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" 
                               placeholder="Enter your password" autocomplete="new-password">
                    </div>

                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-obsidian mb-2">Confirm Password *</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required 
                               class="w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-obsidian/20 bg-white" 
                               placeholder="Confirm your password" autocomplete="new-password">
                    </div>
                </div>

                <button type="submit" 
                        class="w-full mt-6 group relative isolate overflow-hidden bg-obsidian text-white text-sm font-semibold px-6 py-3 rounded-lg shadow-md transition-all duration-300 hover:shadow-lg active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-obsidian/20 focus:ring-offset-2">
                    <span class="relative z-10">Create Account</span>
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-subtle text-sm">
                    Already have an account? 
                    <a href="@Url.Action("Login", "Home")" class="text-obsidian font-medium hover:underline">Sign in</a>
                </p>
            </div>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-border"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-subtle">Or continue with</span>
                    </div>
                </div>

                <div class="mt-4">
                    <a href="@Url.Action("GoogleLogin", "Home")" 
                       class="w-full flex items-center justify-center gap-3 px-4 py-3 border border-border rounded-lg hover:bg-canvas transition-colors">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span class="text-sm font-medium text-obsidian">Continue with Google</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
                return false;
            }
            
            if (password.length < 6) {
                e.preventDefault();
                alert('Password must be at least 6 characters long!');
                return false;
            }
        });
    </script>
}

